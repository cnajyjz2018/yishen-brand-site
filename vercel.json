{
  "version": 2,

  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    {
      "src": "/components/(.*)",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],

  "cleanUrls": false
}
